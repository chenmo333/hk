                        <control:ShowErrorControl x:Name="PART4" Margin="1" />
                        <control:ShowErrorControl x:Name="PART5" Margin="1" />
                        <control:ShowErrorControl x:Name="PART6" Margin="1" />
                        <control:ShowErrorControl x:Name="PART7" Margin="1" />
                        <control:ShowErrorControl x:Name="PART8" Margin="1" />
                        <control:ShowErrorControl x:Name="PART9" Margin="1" />
                        <control:ShowErrorControl x:Name="PART10" Margin="1" />
                    </UniformGrid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>