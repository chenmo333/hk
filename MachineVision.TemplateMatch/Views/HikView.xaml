<UserControl x:Class="MachineVision.TemplateMatch.Views.HikView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MachineVision.TemplateMatch.Views" 
             xmlns:controls="clr-namespace:MachineVision.Shared.Controls;assembly=MachineVision.Shared"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="0.3*" />
        </Grid.ColumnDefinitions>
        <!--  图像编辑器  -->
       <Grid>
           <Grid.RowDefinitions>
               <RowDefinition />
               <RowDefinition Height="0.3*" />
               <RowDefinition Height="auto" />
           </Grid.RowDefinitions>

           <controls:ImageEditView
               DrawObjectList="{Binding DrawObjectList}"
               HWindow="{Binding MatchService.HWindow, Mode=TwoWay}"
               Image="{Binding Image}"
               MaskObject="{Binding MaskObject, Mode=TwoWay}" />

           <DataGrid
               Grid.Row="1"
               AutoGenerateColumns="False"
               BorderThickness="0"
               CanUserAddRows="False"
               ColumnWidth="*"
               IsReadOnly="True"
                FontSize="30"
               ItemsSource="{Binding MatchService.MatchResult.Results}">
               <DataGrid.Columns>
                    <DataGridTextColumn
                       Width="*"
                        
                       Binding="{Binding Information}"
                       Header="信息" />
                   
                </DataGrid.Columns>
           </DataGrid>
           
            </Grid>
        <Grid Grid.Column="1" Margin="10,0">
            <TabControl HorizontalContentAlignment="Left">
                <TabItem Header="海康相机" Width="332" >
                    <StackPanel Grid.Row="1" Margin="0,10">


                        <DockPanel LastChildFill="False">
                            <TextBlock Text="       IP:" FontSize="25"   VerticalAlignment="Center"  />
                            <TextBox
                            Margin="0,5"
                            Padding="5"
                            Width="200"
                            FontSize="20"
                            VerticalAlignment="Center"   
                                
                            Text="{Binding CameraService.Parameters.IP}" />
                            
                            
                        </DockPanel>
                        <DockPanel LastChildFill="False" Margin="0,15">
                            <TextBlock Text="子网掩码:" FontSize="20"    VerticalAlignment="Center" />
                            <TextBox
                            Margin="0,5"
                            Padding="5"
                            Width="200"
                             FontSize="20"
                             VerticalAlignment="Center"   
                                
                            Text="{Binding CameraService.Parameters.MAK}" />
                        </DockPanel>
                        <DockPanel LastChildFill="False" Margin="0,15">
                            <TextBlock Text="       网关:" FontSize="20"    VerticalAlignment="Center" />
                            <TextBox
                            Margin="0,5"
                            Padding="5"
                            Width="200"
                             FontSize="20"   
                                
                            VerticalAlignment="Center"   
                            Text="{Binding CameraService.Parameters.MAK}" />
                        </DockPanel>
                        <DockPanel LastChildFill="False" Margin="0,15">
                            <TextBlock Text="    序列号:" FontSize="20"     VerticalAlignment="Center" />
                            <TextBox
                            Margin="0,5"
                            Padding="5"
                            Width="200"
                            FontSize="20"   
                            VerticalAlignment="Center"    
                            Text="{Binding CameraService.Parameters.MAK}" />
                        </DockPanel>
                        <DockPanel LastChildFill="False" Margin="0,15"    VerticalAlignment="Center">
                            <Button
                            Command="{Binding ScanCameraCommand}"
                            Content="扫描相机"
                            Width="100"
                            />
                            <ComboBox
                                Margin="0,5"
                                 Width="200"
                                Padding="5"
                                 VerticalAlignment="Center"
                                
                               Height="42"
                                ItemsSource="{Binding CameraList}"
                                 DisplayMemberPath="CameraName"
                                 SelectedItem="{Binding SelectedCamera}" 
                                
                                 SelectedIndex="0"
                                >
                            </ComboBox>

                        </DockPanel>
                        <DockPanel LastChildFill="False" Margin="0,15">
                            <Button
                            Command="{Binding StartCameraCommand}"
                            Content="连接相机"
                         
                            Margin="5"/>
                            <Button
                            Command="{Binding CaptureImageCommand}"
                            Content="捕获图像"
                            
                            Margin="5"/>
                 
                            <Button
                            Command="{Binding StopCameraCommand}"
                            Content="关闭相机"
                         
                            Margin="5"/>
                       </DockPanel>
                        <DockPanel LastChildFill="False" Margin="0,15">
                        <Button
                            Command="{Binding SaveImageCommand}"
                            Content="保存图像"
                               VerticalAlignment="Center"
                            
                            Margin="5"/>
                            <TextBlock Text="保存路径:" FontSize="30"    VerticalAlignment="Center" />
                            <TextBox
                             Margin="0,5"
                             Padding="5"
                             Width="200"
                              FontSize="20"   
                                 VerticalAlignment="Center"  
                             Text="{Binding CameraService.Parameters.MAK}" />


                        </DockPanel>
                        <DockPanel LastChildFill="False" Margin="0,15">
                            <TextBlock Text="  曝光:" FontSize="20"    VerticalAlignment="Center"/>
                            <TextBox
                             Margin="0,5"
                             Padding="5"
                             Width="200"
                              FontSize="20" 
                                 VerticalAlignment="Center"  
                             Text="{Binding CameraService.Parameters.MAK}" />
                        </DockPanel>
                        <DockPanel LastChildFill="False" Margin="0,15">
                            <TextBlock Text="  增益:" FontSize="20"    VerticalAlignment="Center"/>
                            <TextBox
                             Margin="0,5"
                             Padding="5"
                             Width="200"
                             FontSize="20"
                                VerticalAlignment="Center"   
                             Text="{Binding CameraService.Parameters.MAK}" />
                        </DockPanel>

                    </StackPanel>
                </TabItem>
          
            </TabControl>
        </Grid>
    </Grid>
</UserControl>
